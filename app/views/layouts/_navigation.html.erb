<nav class="navbar navbar-expand-lg navbar-dark bg-light">
    <%= link_to "BLOG", articles_path, class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if signed_in? %>
          <li class="nav-item">
            <%# link_to "About", about_path, class: "nav-link" %>
            <%= link_to "About", user_path(current_user), class: "nav-link" %>
          </li>
          <li>
            <%# image_tag("user.png", id: "user_icon", :data => { :target => "#exampleModal", toggle: "modal", backdrop: "false"}) %>
            <div class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= image_tag("user.png", id: "user_icon") %></a>
              <ul class="dropdown-menu">
                <li><%= link_to current_user.username, user_path(current_user) %></li>
                <hr>
                <li><%= link_to "Write a story", new_article_path %></li>
                <hr>
                <li role="separator" class="divider"></li>
                
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
                <li role="separator" class="divider"></li>
              </ul>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', login_path, class:"nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <div class="modal-body">
            <% if signed_in? %>
            <p>

                <%= link_to current_user.username, user_path(current_user) %>
            </p>
            <hr>
            <p>
              <%= link_to "Write a story", new_article_path %>
            </p>
            <hr>
            <p>
              <%= link_to "Log out", logout_path, method: :delete %>
            </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</nav>



  
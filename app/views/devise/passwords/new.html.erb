<div class="row justify-content-center align-content-center">
  <div class="col-12 col-xl-6 col-lg-8 col-md-8"> 
    <span class="title page-title text-center d-block mb-3">Forgot your password?</span>


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="my-3">
          <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-block text-center" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>


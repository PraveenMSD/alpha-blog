<% if signed_in? %>
    <h6>Add a comment</h6>
    <%= form_for([@article, @article.comments.build]) do |f| %>
        <div class= "text-center">
            <%= f.hidden_field :commenter, value:current_user.username %>
        </div>
        <div class="text-center">
            <%= f.label :comment %>
            <%= f.text_area :body %>
        </div>
        <div class="text-center">
            <%= f.submit %>
        </div>
    <% end %>
<% end %>
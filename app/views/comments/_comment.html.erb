<div class="card-text text-left">
    <h6>Comments:</h6>
    <% @article.comments.each do |c| %>
    <p>
        <b><%= c.commenter %> :</b>
        <%= c.body %>
    </p>
    <% end %>
</div>


<% if signed_in? %>
    <h6>Add a comment</h6>
    <%= form_for([@article, @article.comments.build]) do |f| %>
        <div class= "text-center">
            <%= f.label :commenter %>
            <%= f.text_field :commenter %>
        </div>
        <div class="text-center">
            <%= f.label :comment %>
            <%= f.text_area :body %>
        </div>
        <div class="text-center">
            <%= f.submit %>
        </div>
    <% end %>
<% end %>